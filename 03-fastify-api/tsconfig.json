{
  "compilerOptions": {
    /* Estrutura de Diretórios (O Fix do Erro) */
    "rootDir": "./src",                                  /* Onde está o código fonte */
    "outDir": "./dist",                                  /* Onde o código compilado deve ir */

    /* Configuração de Módulos Modernos (Node 22) */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    
    /* Strict Type Checking (SRE Safety) */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}